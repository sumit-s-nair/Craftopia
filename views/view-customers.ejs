<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Customers</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <admin-header></admin-header>
    <main>
        <h1>View Customers</h1>
        <table id="view-customers">
            <thead>
                <tr>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user._id %></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.address %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </main>
    <user-footer></user-footer>
    <script src="/js/navbars.js"></script>
</body>
</html>
