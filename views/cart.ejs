<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="../css/style.css">
</head>
<body>
    <user-header></user-header>
    <main>
        <table id="cart">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price (₹)</th>
                    <th>Quantity</th>
                    <th>Customization</th>
                    <th>Total</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                <% cartItems.forEach(item => { %>
                    <tr>
                        <td><%= item.product.name %></td>
                        <td>₹<%= item.product.price %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.product.customization || 'N/A' %></td>
                        <td>₹<%= item.product.price * item.quantity %></td>
                        <td>
                            <button class="danger icon delete-btn" data-id="<%= item.product._id %>">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed">
                                    <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/>
                                </svg>
                            </button>                            
                        </td>
                    </tr>
                <% }) %>                
            </tbody>            
        </table>
        <div id="cart-summary">
            <h2>Cart Summary</h2>
            <p>Total Amount: ₹<span id="total-amount"><%= totalAmount %></span></p>
        </div>
        <div id="order-details">
            <h2>Order Details</h2>
            <form id="order-form" action="/order/place" method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
                
                <label for="shippingAddress">Address:</label>
                <textarea id="shippingAddress" name="shippingAddress" required></textarea>
                
                <label for="phone">Phone:</label>
                <input type="tel" id="phone" name="phone" required>
                
                <button type="submit">Place Order</button>
            </form>
        </div>
    </main>
    <user-footer></user-footer>

    <script src="/js/navbars.js"></script>
    <script src="/js/cart.js"></script>
</body>
</html>
